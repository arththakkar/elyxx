<div class="col-md-12">
  <% flash.each do |name, msg| %>
    <% if msg.class == Array %>
      <% msg.each do |m| %>
        <div class="alert alert-<%= name.to_s %>">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          <div class="sb-msg">
            <% if name.to_s == "success" %>
              <i class="icon-thumbs-up"></i>
            <% elsif name.to_s == "danger" %>
              <i class="icon-remove"></i>
            <% end %>
            <%= m %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="alert alert-<%= name.to_s %>">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <div class="sb-msg">
          <% if name.to_s == "success" %>
            <i class="icon-thumbs-up"></i>
          <% elsif name.to_s == "error" %>
            <i class="icon-remove"></i>
          <% end %>
          <%= msg %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>